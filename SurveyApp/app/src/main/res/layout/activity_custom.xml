<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CustomActivity">

    <TextView
        android:id="@+id/name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="Name"/>


    <TextView
        android:id="@+id/movie"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="What is your favorite movie?"/>

    <EditText
        android:id="@+id/movieAnswer"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:hint="Answer"
        android:inputType="text"/>

    <TextView
        android:id="@+id/singer"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="Who is your favorite singer?"/>

    <EditText
        android:id="@+id/singerAnswer"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:hint="Answer"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="What is your favorite meal?"/>

    <EditText
        android:id="@+id/mealAnswer"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:hint="Answer"
        android:inputType="text"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="Save"
        android:textSize="25sp" />

</LinearLayout>